{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    ":label(dependencies)",
    ":timezone(Europe/Amsterdam)",
    "schedule:nonOfficeHours"
  ],
  "enabledManagers": [
    "docker-compose"
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 20,
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "matchManagers": [
        "docker-compose"
      ],
      "groupName": "All Docker image updates"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update",
        "needs-review"
      ]
    },
    {
      "description": "Skip PostgreSQL container updates",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["postgres", "postgis/postgis", "timescale/timescaledb", "pgvector", "postgresql"],
      "enabled": false
    }
  ],
  "rollbackPrs": true,
  "minimumReleaseAge": "2 days",
  "rebaseWhen": "behind-base-branch",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "minimumReleaseAge": null
  }
}
