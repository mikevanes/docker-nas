{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    ":label(dependencies)",
    ":timezone(Europe/Amsterdam)",
    "schedule:nonOfficeHours"
  ],
  "enabledManagers": ["docker-compose"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 20,
  "packageRules": [
    {
      "matchManagers": ["docker-compose"],
      "groupName": "All Docker image updates"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update", "needs-review"]
    }
  ],
  "rollbackPrs": true,
  "stabilityDays": 2,
  "docker": {
    "pinDigests": true
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "stabilityDays": 0
  }
}
